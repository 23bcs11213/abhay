name: Java CI/CD Pipeline

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    name: ðŸ”¨ Build and Test
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout code
      - name: ðŸ“¥ Checkout repository
        uses: actions/checkout@v4

      # Step 2: Set up JDK 17
      - name: â˜• Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: maven

      # Step 3: Build and run tests
      - name: ðŸ§ª Build with Maven
        run: mvn -B clean verify

      # Step 4: Archive build artifacts
      - name: ðŸ“¦ Upload JAR Artifact
        uses: actions/upload-artifact@v4
        with:
          name: my-java-app
          path: target/*.jar

  deploy:
    name: ðŸš€ Deploy (example)
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'

    steps:
      - name: ðŸ“¥ Checkout repository
        uses: actions/checkout@v4

      - name: ðŸ”½ Download Build Artifact
        uses: actions/download-artifact@v4
        with:
          name: my-java-app
          path: ./deploy

      # Example: Deploy to GitHub Pages (static site projects)
      # You can replace this with Docker, AWS, or server deployment.
      - name: ðŸš€ Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./deploy
