import React from "react";
import ReactDOM from "react-dom/client";
import "./index.css";

// ‚úÖ ProductCard Component
function ProductCard({ name, price, description, image, onAddToCart }) {
  return (
    <div style={styles.card}>
      <img src={image} alt={name} style={styles.image} />
      <h2 style={styles.title}>{name}</h2>
      <p style={styles.desc}>{description}</p>
      <p style={styles.price}>${price.toFixed(2)}</p>
      <button style={styles.button} onClick={onAddToCart}>
        Add to Cart
      </button>
    </div>
  );
}

// ‚úÖ Example App using ProductCard
function App() {
  const handleAdd = (name) => {
    alert(`${name} added to cart!`);
  };

  return (
    <div style={styles.container}>
      <h1 style={styles.header}>üõçÔ∏è Product List</h1>
      <div style={styles.grid}>
        <ProductCard
          name="Wireless Headphones"
          price={99.99}
          description="High-quality sound with noise cancellation."
          image="https://via.placeholder.com/200"
          onAddToCart={() => handleAdd("Wireless Headphones")}
        />
        <ProductCard
          name="Smart Watch"
          price={149.49}
          description="Track your health and stay connected."
          image="https://via.placeholder.com/200"
          onAddToCart={() => handleAdd("Smart Watch")}
        />
        <ProductCard
          name="Gaming Mouse"
          price={39.99}
          description="Ergonomic design with RGB lighting."
          image="https://via.placeholder.com/200"
          onAddToCart={() => handleAdd("Gaming Mouse")}
        />
      </div>
    </div>
  );
}

